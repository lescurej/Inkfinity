# Configuration du serveur
PORT=3000
HOST=localhost

# Type de stockage (memory ou mongodb)
STORAGE_TYPE=memory

# Configuration MongoDB (requis si STORAGE_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/inkfinity

# Configuration PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=coll_canvas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Configuration SQLite
SQLITE_FILE=./database.sqlite

# Configuration Redis
REDIS_URL=redis://localhost:6379

# Configuration du canvas
MAX_POINTS=10000
CANVAS_WIDTH=2000
CANVAS_HEIGHT=2000

# Configuration des logs
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false

# Variables pour Render.com
# PORT sera automatiquement défini par Render
# MONGODB_URI sera fourni par Render lors de la création de la base de données 